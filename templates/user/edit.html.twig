{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row" id="fromRow">
      <div class="formContenair">
      
            {{ form_start(form, {'action' : path('user_create', { 'id': user.id})}) }}
        
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Pseudo' } }) }}
            {{ form_widget(form.role, { 'attr': {'class': 'form-control', 'placeholder': 'Role'} }) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}


            <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}
      
      </div>
    </div>
{% endblock %}